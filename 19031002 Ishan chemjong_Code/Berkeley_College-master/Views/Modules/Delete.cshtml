@model berkeley_college.Models.Module

@{
    ViewData["Title"] = "Delete Module Details";
}

<h1>Delete Module Detail</h1>
<br />

<h3>Do you want to delete this specific module detail?</h3>
<div>
    <h5>Module</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModuleCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModuleCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModuleName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModuleName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModuleTeachingDays)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModuleTeachingDays)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModuleCredit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModuleCredit)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ModuleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back</a>
    </form>
</div>
