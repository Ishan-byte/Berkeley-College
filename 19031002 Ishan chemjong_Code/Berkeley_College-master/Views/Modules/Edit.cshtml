@model berkeley_college.Models.Module

@{
    ViewData["Title"] = "Edit Module Detials";
}

<h1>Edit Module Details</h1>
<br />

<h5>Module</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ModuleId" />
            <div class="form-group">
                <label asp-for="ModuleCode" class="control-label"></label>
                <input asp-for="ModuleCode" class="form-control" />
                <span asp-validation-for="ModuleCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModuleName" class="control-label"></label>
                <input asp-for="ModuleName" class="form-control" />
                <span asp-validation-for="ModuleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModuleTeachingDays" class="control-label"></label>
                <input asp-for="ModuleTeachingDays" class="form-control" />
                <span asp-validation-for="ModuleTeachingDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModuleCredit" class="control-label"></label>
                <input asp-for="ModuleCredit" class="form-control" />
                <span asp-validation-for="ModuleCredit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
