@model berkeley_college.Models.Student

@{
    ViewData["Title"] = "Edit Student Details";
}

<h1>Edit existing Student</h1>
<br />

<h4>Student Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonId" />
            <div class="form-group">
                <label asp-for="StudentYear" class="control-label"></label>
                <input asp-for="StudentYear" class="form-control" />
                <span asp-validation-for="StudentYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
